{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm -C web install && pnpm -C web build",
  "outputDirectory": "web/dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.go": {
      "memory": 256,
      "maxDuration": 10
    }
  }
}
