{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/api", "destination": "/api" },
    { "source": "/api/recipes/list", "destination": "/api/recipes/list" },
    {
      "source": "/api/recipes/:id(\\d+)",
      "destination": "/api/recipes/detailed"
    },
    { "source": "/(.*)", "destination": "/web/dist/index.html" }
  ],
  "installCommand": "pnpm -C web install",
  "buildCommand": "pnpm -C web run build",
  "outputDirectory": "web/dist"
}
